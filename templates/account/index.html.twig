{% extends 'base.html.twig' %}

{% block title %}Mon compte - Samatakkay !{% endblock %}

{% block content %}
    <h1 class="title">Mon compte</h1>
    {% if is_granted('ROLE_ADMIN') %}
        <small> <a class="btn float-right" href="{{ path('admin') }}">Accéder au backoffice</a></small><br>
    {% endif %}

    
    Bienvenu {{app.user.firstname}} dans votre compte. <br>
    Gérer toutes vos informations.
    <hr>
     <div class="row">
        <div class="col-md-4 my-1">

            <div class="account-item text-center">
                 <img src="{{ asset('assets/img/password.png') }}" alt="Modifier mon mot de pass" ><br/>  
                <a href="{{ path('account_password') }}">Modifier mon mot de passe</a>
            </div>
        </div>
        <div class="col-md-4 my-1">
            <div class="account-item text-center">
                 <img src="{{ asset('assets/img/contacts.png') }}" alt="Gestion des adresses" ><br/>

                <a href="{{ path('account_address') }}">Gérer mes Adresses</a>
            </div>
        </div>
        <div class="col-md-4 my-1">
            <div class="account-item text-center">
                 <img src="{{ asset('assets/img/order.png') }}" alt="Mes commandes" ><br/>

                <a href="{{ path('account_order') }}">Mes commandes</a>
            </div>
        </div>        
     </div>
     <hr>

{% endblock %}