{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Samatakkay{% endblock %}

{% block content %}

    <div class="row my-5">
        <div class="col-12 col-md-5">
            <img src="/uploads/media/{{ product.illustration }}" class="img-fluid" alt="{{ product.name }}">
        </div>
        <div class="col-12 col-md-7 my-auto">
            <h1>{{ product.name|upper }}</h1>
            <p class="product-page-price">Prix: {{( product.price / 100)|number_format (2, ',', '.')}} €</p>
            <p>Composition : {{ product.composition }}</p>
            <hr>
            <p>Description : {{ product.description }}</p>
            <a class="btn btn-primary" href="{{ path('add-to-cart', {'id' : product.id}) }}">Ajouter au panier</a>

        </div>
    </div>
    <hr>
    <h1 class="title">Nos meilleures ventes</h1>
    <p class="text-center">Découvrez les articles les plus vendus en ce moment</p>
    <div class="row my-5">
        {% for product in products %}
            <div class="col-12 col-md-3 my-4 cards-custum" >
                {% include 'product/single_product.html.twig' %}
            </div>    
        {% endfor %}
    </div>
    
{% endblock %}
